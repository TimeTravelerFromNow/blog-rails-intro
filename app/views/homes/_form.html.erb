<%= form_with(model: home) do |form| %>
  <% if home.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(home.errors.count, "error") %> prohibited this home from being saved:</h2>

      <ul>
        <% home.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :about, style: "display: block" %>
    <%= form.rich_text_area :about %>
  </div>

  <div class="container-sm">
    <div class="row">

      <div class="col">
        <div>
          <%= form.label :brand_name, style: "display: block" %>
          <%= form.text_field :brand_name, value: home.brand_name %>
        </div>

        <div>
          <%= form.label :time_tag, style: "display: block" %>
          <%= form.datetime_field :time_tag %>
        </div>
      </div>

      <div class="col">
        <div>
          <%= form.label :icon_class, style: "display: block" %>
          <%= form.text_field :icon_class, value: home.icon_class %>
        </div>

        <div>
          <%= form.label :icon, style: "display: block" %>
          <%= form.text_field :icon, value: home.icon  %>
        </div>

        <div>
          <%= form.label :site_icon_size, style: "display: block" %>
          <%= form.number_field :site_icon_size, value: home.site_icon_size, in: IconsHelper::VALID_ICON_SIZES  %>
        </div>

        <div>
          <strong> preview: </strong>
          <%= sanitize home.fa_icon %>
          <a href="https://fontawesome.com/search?o=r&m=free&f=brands">More Favicons</a>
        </div>

        <div>
          <%= form.label :site_width, style: "display: block" %>
          <%= form.number_field :site_width, value: home.site_width, in: Home::VALID_SITE_WIDTHS  %>px
        </div>
      </div>
      <!-- two row divs -->
    </div>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
