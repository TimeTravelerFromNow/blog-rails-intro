<p style="color: green"><%= notice %></p>

<h1>Blogs</h1>

<div id="blogs" class="container-md ">
  <div class="blog-card-row">
  <% @blogs.each do |blog| %>
    <%= link_to blog, class:"blog-link-square col" do %>
      <%= render "blog_card", blog: blog %>
    <% end %>
  <% end %>
  </div>
</div>

<%= link_to "New blog", new_blog_path, class:"btn btn-primary" %>
